<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textResposta"
            android:background="@drawable/round_style_resposta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="@color/cor_BackMensagem"
            android:maxWidth="370dp"
            android:padding="10dp"
            android:text="Me conte uma piada Me conte uma piada Me conte uma piada Me conte uma piada Me conte uma piada vMe conte uma piadaMe conte uma piadaMe conte uma piadaMe conte uma piadaMe conte uma piada"
            android:textColor="@color/cor_TextMensagem"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnAudio"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#00FFFFFF"
            android:isScrollContainer="false"
            app:icon="@android:drawable/ic_lock_silent_mode_off"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            android:layout_marginBottom="8dp"
            app:iconTint="@color/mtrl_textinput_default_box_stroke_color" />
    </LinearLayout>

</LinearLayout>