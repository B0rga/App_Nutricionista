<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="603dp"
        android:layout_above="@+id/btnAddImagem"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textoTemporario"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:text="Inice a conversa para receber seu atendimento nutricional personalizado\n\nEnvie fotos do pratos de comida para saber os nutrientes e calorias envolvidas\n\nClique no Ã­cone de som abaixo da mensagem para o texto ser falado"
                android:textAlignment="viewStart"
                android:textColor="#7A7A7A"
                android:textSize="16sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnAddImagem"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_above="@+id/digitacao"
        android:backgroundTint="#00FFFFFF"
        android:isScrollContainer="false"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconGravity="textEnd"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="@color/mtrl_textinput_default_box_stroke_color"
        app:iconTintMode="multiply" />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_above="@+id/digitacao"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/btnAddImagem"
        android:background="#00FFFFFF"
        android:isScrollContainer="false"
        app:icon="@android:drawable/ic_menu_gallery"
        app:iconGravity="textEnd"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="@color/mtrl_textinput_default_box_stroke_color" />

    <LinearLayout
        android:id="@+id/digitacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/editTarefa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_style_input"
            android:hint="Mensagem"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnGo"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/cor_selecionada"
            android:isScrollContainer="false"
            android:padding="0dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_menu_send"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconSize="34dp"
            app:iconTint="#FFFFFF"
            app:iconTintMode="multiply" />

    </LinearLayout>


</RelativeLayout>
